<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nakoyagarden.ekapop.restaurant.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/layout1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/btnOrderAdd"
            android:layout_marginBottom ="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/orderadd"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/btnCookView"
            android:layout_marginBottom ="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/btnOrderAdd"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/btnMBill"
            android:layout_marginBottom ="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/btnCookView"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/btnMCloseDay"
            android:layout_marginBottom ="20dp"
            android:layout_gravity="center_horizontal"
            android:elevation="0dp"
            android:layout_below="@+id/btnMBill"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMInt"
            android:layout_marginBottom ="20dp"
            android:layout_gravity="center_horizontal"
            android:elevation="0dp"
            android:layout_below="@+id/btnMCloseDay"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMReport"
            android:layout_marginBottom ="20dp"
            android:layout_gravity="center_horizontal"
            android:elevation="0dp"
            android:layout_below="@+id/btnMInt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/lbMMessage"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom"
            android:layout_below="@+id/btnMInt"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/layout2"
        android:layout_below="@id/layout1"
        android:gravity="bottom">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/presence_online"
            android:id="@+id/imageRes"
            android:layout_gravity="left"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/presence_online"
            android:id="@+id/imageArea"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/presence_online"
            android:id="@+id/imageTable" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/presence_online"
            android:id="@+id/imageFoods" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/presence_online"
            android:id="@+id/imageFoodsType" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/presence_online"
            android:id="@+id/imageUser" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
