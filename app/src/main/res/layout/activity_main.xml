<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nakoyagarden.ekapop.restaurant.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/btnOrderAdd"
            android:layout_marginBottom ="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/orderadd"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/btnCookView"
            android:layout_marginBottom ="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/btnOrderAdd"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/btnMBill"
            android:layout_marginBottom ="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/btnCookView"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/btnMCloseDay"
            android:layout_marginBottom ="20dp"
            android:layout_gravity="center_horizontal"
            android:elevation="0dp"
            android:layout_below="@+id/btnMBill"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/btnMInt"
            android:layout_marginBottom ="20dp"
            android:layout_gravity="center_horizontal"
            android:elevation="0dp"
            android:layout_below="@+id/btnMCloseDay"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/lbMMessage"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom"
            android:layout_below="@+id/btnMInt"/>

    </LinearLayout>
</RelativeLayout>
