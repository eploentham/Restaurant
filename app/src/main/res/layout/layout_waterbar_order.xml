<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutWaterBarOrder">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cboWaterBarArea"
            android:layout_row="0"
            android:layout_column="0" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cboWaterBarTable"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/lbDate"
            android:layout_row="0"
            android:layout_column="2" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New CheckBox"
            android:id="@+id/chkCoke"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2" />
        <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
            android:id="@+id/txtQtyCoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New CheckBox"
            android:id="@+id/chkPapsi"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2" />
        <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
            android:id="@+id/txtQtyPapis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New CheckBox"
            android:id="@+id/chkWaterOrange"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2" />
        <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
            android:id="@+id/txtQtyWaterOrange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New CheckBox"
            android:id="@+id/chkWaterRed"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2" />
        <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
            android:id="@+id/txtQtyWaterRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New CheckBox"
            android:id="@+id/chkSoda"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2" />
        <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
            android:id="@+id/txtQtySoda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New CheckBox"
            android:id="@+id/chkBeerSingha"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="2" />
        <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
            android:id="@+id/txtQtyBeerSingha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New CheckBox"
            android:id="@+id/chkBeerLeo"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnSpan="2" />
        <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
            android:id="@+id/txtQtyBeerLeo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New CheckBox"
            android:id="@+id/chkBeerChiang"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnSpan="2" />
        <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
            android:id="@+id/txtQtyBeerChiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New CheckBox"
            android:id="@+id/chkIceGlass"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_columnSpan="2" />
        <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
            android:id="@+id/txtQtyIceGlass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="9"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New CheckBox"
            android:id="@+id/chkIceJar"
            android:layout_row="10"
            android:layout_column="0"
            android:layout_columnSpan="2" />
        <com.hrules.horizontalnumberpicker.HorizontalNumberPicker
            android:id="@+id/txtQtyIceJar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="10"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            />
    </GridLayout>
</LinearLayout>
