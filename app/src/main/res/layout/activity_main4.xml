<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nakoyagarden.ekapop.restaurant.Main4Activity">


    <ImageButton
        android:id="@+id/btnOrderAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="140dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/orderadd"
        android:text="New Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnMBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCookView"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="New Button" />

    <ImageButton
        android:id="@+id/btnCookView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnOrderAdd"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="48dp"
        android:text="New Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOrderAdd" />

    <ImageButton
        android:id="@+id/btnMInt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMCloseDay"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="180dp"
        android:elevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="295dp" />

    <ImageButton
        android:id="@+id/btnMCloseDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMBill"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="68dp"
        android:elevation="0dp"
        android:text="New Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCookView" />

    <ImageButton
        android:id="@+id/btnMReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMInt"
        android:layout_gravity="center_horizontal"
        android:elevation="0dp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="228dp" />

    <TextView
        android:id="@+id/lbMMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMInt"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom"
        android:text="New Button"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="269dp" />


</android.support.constraint.ConstraintLayout>
